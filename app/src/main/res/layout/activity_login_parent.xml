<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#001B37"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="31dp"
        android:background="@drawable/stroke_56c79c_r50"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <com.google.android.material.button.MaterialButton
            android:backgroundTint="#56C79C"
            android:background="@drawable/button_r50"
            android:textColor="@color/white"
            android:text="@string/button_login"
            android:textSize="17sp"
            android:id="@+id/button_to_login"
            android:layout_width="180dp"
            android:layout_height="44dp" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.TextButton"
            android:textSize="17sp"
            android:textColor="#56C79C"
            android:text="@string/button_login"
            android:id="@+id/button_will_login"
            android:layout_width="180dp"
            android:layout_height="44dp" />
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.TextButton"
            android:textSize="17sp"
            android:textColor="#56C79C"
            android:text="@string/button_signup"
            android:layout_alignParentRight="true"
            android:id="@+id/button_to_siginin"
            android:layout_width="180dp"
            android:layout_height="44dp" />
        <com.google.android.material.button.MaterialButton
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:backgroundTint="#56C79C"
            android:background="@drawable/button_r50"
            android:textColor="@color/white"
            android:text="@string/button_signup"
            android:textSize="17sp"
            android:id="@+id/button_will_signin"
            android:layout_width="180dp"
            android:layout_height="44dp" />


    </RelativeLayout>
    <FrameLayout

        android:id="@+id/anchor"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>