<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_001B37"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/title_agree_eula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="2dp"
        android:text="@string/text_agree_eula"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <LinearLayout
            android:minHeight="269dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.checkbox.MaterialCheckBox
                android:button="@null"
                android:drawableTint="@color/checkbox_tint_color"
                android:drawableRight="@drawable/ic_baseline_check_circle_outline_24"
                android:id="@+id/checkbox_eula_1"
                android:textColor="@color/white"
                android:text="@string/checkbox_eula_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox_final_terms"
        android:textSize="14sp"
        android:minHeight="0dp"
        android:text="@string/checkbox_all"
        android:textColor="@color/white"
        android:drawableTint="#4DC091"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:backgroundTint="#A7A7A7"
            android:text="@string/button_disagree"
            android:id="@+id/button_disagree"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_width="0dp"
            android:minHeight="50dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />
        <com.google.android.material.button.MaterialButton
            android:backgroundTint="#56C79C"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="@string/button_agree"
            android:id="@+id/button_agree"
            android:layout_width="0dp"
            android:minHeight="50dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>