<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:background="@color/loading_background">

    <TextView
        android:layout_marginTop="30dp"
        android:text="@string/base_info_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="textEmailAddress"
        android:hint="@string/text_email"
        android:paddingLeft="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingRight="15dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textColorHint="@color/color_4DC091"
        android:background="@drawable/stroke_4dc091_r6"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="textPassword"
        android:hint="@string/text_password"
        android:paddingLeft="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingRight="15dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textColorHint="@color/color_4DC091"
        android:background="@drawable/stroke_4dc091_r6"
        android:layout_marginTop="30dp"
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="textPassword"
        android:hint="@string/text_password_confirm"
        android:paddingLeft="15dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingRight="15dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textColorHint="@color/color_4DC091"
        android:background="@drawable/stroke_4dc091_r6"
        android:layout_marginTop="30dp"
        android:id="@+id/edit_text_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton

            android:textSize="17sp"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            android:backgroundTint="#A7A7A7"
            android:textColor="@color/white"
            android:id="@+id/button_cancel"
            android:text="@string/button_cancel"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <com.google.android.material.button.MaterialButton

            android:textSize="17sp"
            android:paddingTop="12dp"
            android:paddingBottom="13dp"
            android:backgroundTint="@color/default_button_tint_color"
            android:textColor="@color/white"
            android:id="@+id/button_do_next"
            android:text="@string/button_next"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>





</LinearLayout>