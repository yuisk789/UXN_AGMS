<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_001B37"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:orientation="vertical">


    <TextView
        android:layout_gravity="center_horizontal"
        android:text="장치 수동 연결"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="25dp"
        android:id="@+id/manual_1_title"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="46dp"
        android:text="트랜스미터 일련번호 입력"
        android:textSize="17sp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/manual_1_description"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="2dp"
        android:text="트랜스미터 일련번호는 트랜스미터 하단과 트랜스미터 상자 겉면에 인쇄되어 있습니다."
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:inputType="textEmailAddress"
        android:hint="S/N : XXX_XXXX"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="13dp"
        android:paddingRight="15dp"
        android:textSize="17sp"
        android:minHeight="50dp"
        android:textColor="@color/white"
        android:textColorHint="@color/color_4DC091"
        android:background="@drawable/stroke_4dc091_r6"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_text_mac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:minHeight="55dp"
        android:backgroundTint="@color/default_button_tint_color"
        android:textColor="@color/white"
        android:id="@+id/button_device_list"
        android:text="장치 리스트에서 선택"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />




    <com.google.android.material.button.MaterialButton
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="148dp"

        android:textSize="17sp"
        android:minHeight="55dp"
        android:backgroundTint="@color/default_button_tint_color"
        android:textColor="@color/white"
        android:id="@+id/button_connect"
        android:text="연결"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>