<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_001B37"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/manual3"
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:text="@string/manual_3_title"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="82dp"
        android:id="@+id/manual_1_title"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="14dp"
        android:text="@string/manual_3_description"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/manual_1_description"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />



    <LinearLayout
        android:layout_marginBottom="72dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/wrap_dots"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <ImageView
            android:layout_marginRight="@dimen/dot_padding"
            android:src="@drawable/circle_disabled"
            android:layout_width="@dimen/dot_size"
            android:layout_height="@dimen/dot_size" />
        <ImageView
            android:layout_marginRight="@dimen/dot_padding"
            android:src="@drawable/circle_disabled"
            android:layout_width="@dimen/dot_size"
            android:layout_height="@dimen/dot_size" />
        <ImageView

            android:src="@drawable/circle_active"
            android:layout_width="@dimen/dot_size"
            android:layout_height="@dimen/dot_size" />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="17sp"
        android:minHeight="55dp"
        android:backgroundTint="@color/default_button_tint_color"
        android:textColor="@color/white"
        android:id="@+id/button_next"
        android:text="완료"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>