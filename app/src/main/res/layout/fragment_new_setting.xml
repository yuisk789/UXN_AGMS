<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001b37"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    >
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/page_title"
        android:textStyle="bold"
        android:text="@string/title_setting"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="32dp"
        android:layout_below="@id/page_title"
        android:minHeight="72dp"
        android:background="@drawable/rectangle_233b53"
        android:textSize="18sp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
        android:id="@+id/button_new_user"
        android:textColor="@color/text_color"
        android:text="@string/button_new_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="10dp"
        android:layout_below="@id/button_new_user"
        android:minHeight="72dp"
        android:background="@drawable/rectangle_233b53"
        android:textSize="18sp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
        android:id="@+id/button_new_device"
        android:textColor="@color/text_color"
        android:text="@string/button_new_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="10dp"
        android:layout_below="@id/button_new_device"
        android:minHeight="72dp"
        android:background="@drawable/rectangle_233b53"
        android:textSize="18sp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
        android:id="@+id/button_new_sensor"
        android:textColor="@color/text_color"
        android:text="@string/button_new_sensor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="10dp"
        android:layout_below="@id/button_new_sensor"
        android:minHeight="72dp"
        android:background="@drawable/rectangle_233b53"
        android:textSize="18sp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
        android:id="@+id/button_save"
        android:textColor="@color/text_color"
        android:text="@string/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="10dp"
        android:layout_below="@id/button_save"
        android:minHeight="72dp"
        android:background="@drawable/rectangle_233b53"
        android:textSize="18sp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
        android:id="@+id/button_cancel"
        android:textColor="@color/text_color"
        android:text="@string/button_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>